<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener - Fast & Secure</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        :root {
            --primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --primary-solid: #667eea;
            --secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --success-solid: #10b981;
            --bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --card: rgba(255, 255, 255, 0.95);
            --card-hover: rgba(255, 255, 255, 0.98);
            --text-primary: #1a202c;
            --text-secondary: #4a5568;
            --text-muted: #718096;
            --border: rgba(226, 232, 240, 0.8);
            --shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 30px 80px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg);
            color: var(--text-primary);
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.2) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 2rem;
            position: relative;
            animation: slideIn 0.8s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
            animation: fadeIn 1s ease-out 0.2s both;
        }

        .header h1 {
            font-size: 3.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }

        .header p {
            font-size: 1.2rem;
            color: var(--text-secondary);
            font-weight: 400;
            opacity: 0.9;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .main-card {
            background: var(--card);
            border-radius: 24px;
            padding: 3rem;
            box-shadow: var(--shadow);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            animation: fadeIn 1s ease-out 0.4s both;
            position: relative;
            overflow: hidden;
        }

        .main-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 2px;
            background: var(--primary);
            transition: left 0.5s ease;
        }

        .main-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
            background: var(--card-hover);
        }

        .main-card:hover::before {
            left: 0;
        }

        .form-section {
            margin-bottom: 2.5rem;
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .url-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .input-group {
            position: relative;
        }

        .input-label {
            display: block;
            font-weight: 500;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .url-input {
            width: 100%;
            padding: 1rem 1.5rem;
            border: 2px solid var(--border);
            border-radius: 16px;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
        }

        .url-input:focus {
            outline: none;
            border-color: var(--primary-solid);
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
            background: rgba(255, 255, 255, 0.95);
        }

        .url-input::placeholder {
            color: var(--text-muted);
        }

        .submit-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 16px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .submit-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transition: all 0.5s ease;
            transform: translate(-50%, -50%);
        }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        }

        .submit-btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .submit-btn:active {
            transform: translateY(-1px);
        }

        .result-section {
            padding: 2rem;
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(52, 211, 153, 0.1) 100%);
            border-radius: 20px;
            border: 1px solid rgba(16, 185, 129, 0.2);
            margin-bottom: 2rem;
            animation: slideInUp 0.6s ease-out;
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .result-title {
            color: var(--success-solid);
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .result-title::before {
            content: 'âœ“';
            background: var(--success-solid);
            color: white;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .short-url {
            display: inline-flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            background: white;
            border-radius: 12px;
            color: var(--primary-solid);
            text-decoration: none;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            gap: 0.5rem;
        }

        .short-url:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .short-url::after {
            content: 'ðŸ“‹';
            opacity: 0.7;
        }

        .table-section {
            margin-top: 2rem;
        }

        .table-header {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .url-table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            background: white;
        }

        .url-table thead {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .url-table th {
            padding: 1.25rem 1.5rem;
            text-align: left;
            font-weight: 600;
            font-size: 0.9rem;
            letter-spacing: 0.025em;
            text-transform: uppercase;
        }

        .url-table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid #f1f5f9;
        }

        .url-table tbody tr:hover {
            background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
            transform: translateX(4px);
        }

        .url-table td {
            padding: 1.25rem 1.5rem;
            vertical-align: middle;
            color: var(--text-primary);
        }

        .table-link {
            color: var(--primary-solid);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s ease;
            word-break: break-all;
        }

        .table-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .click-count {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            display: inline-block;
            min-width: 40px;
            text-align: center;
        }

        .serial-number {
            color: var(--text-muted);
            font-weight: 500;
            background: #f8fafc;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        @media (max-width: 768px) {
            .container {
                margin: 1rem;
                padding: 1rem;
            }

            .header h1 {
                font-size: 2.5rem;
            }

            .main-card {
                padding: 2rem;
                border-radius: 16px;
            }

            .url-table th:first-child,
            .url-table td:first-child {
                display: none;
            }

            .url-table {
                font-size: 0.9rem;
            }

            .url-table th,
            .url-table td {
                padding: 1rem;
            }
        }

        @media (max-width: 480px) {
            .header h1 {
                font-size: 2rem;
            }

            .header p {
                font-size: 1rem;
            }

            .main-card {
                padding: 1.5rem;
            }

            .url-table th:nth-child(3),
            .url-table td:nth-child(3) {
                display: none;
            }
        }

        /* Loading animation */
        .loading {
            opacity: 0.7;
            pointer-events: none;
        }

        .loading .submit-btn {
            position: relative;
        }

        .loading .submit-btn::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            transform: translate(-50%, -50%);
        }

        @keyframes spin {
            0% { transform: translate(-50%, -50%) rotate(0deg); }
            100% { transform: translate(-50%, -50%) rotate(360deg); }
        }

        /* Pulse effect for new entries */
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .new-entry {
            animation: pulse 2s ease-in-out 3;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>QuickLink</h1>
            <p>Transform long URLs into powerful short links</p>
        </div>

        <div class="main-card">
            <% if(locals.id) { %>
                <div class="result-section">
                    <div class="result-title">Success! Your URL has been shortened</div>
                    <a class="short-url" target="_blank" href="http://localhost:3000/api/urls/<%= id %>">
                        http://localhost:3000/api/urls/<%= id %>
                    </a>
                </div>
            <% } %>

            <div class="form-section">
                <h2 class="form-title">Register</h2>
                <form class="url-form" method="post" action="/api/users/register" onsubmit="handleSubmit(event)">
                    <div class="input-group">
                        <label class="input-label" for="redirectURL">Username</label>
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            class="url-input"
                            placeholder="Username"
                            required
                        >
                    </div>
                    <div class="input-group">
                        <label class="input-label" for="redirectURL">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="url-input"
                            placeholder="email@gamil.com"
                            required
                        >
                    </div>
                    <div class="input-group">
                        <label class="input-label" for="redirectURL">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="url-input"
                            placeholder="password"
                            required
                        >
                    </div>
                    <button type="submit" class="submit-btn">
                        <span class="btn-text">Signup</span>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function handleSubmit(event) {
            const form = event.target;
            const container = form.closest('.main-card');
            container.classList.add('loading');
            
            // Remove loading state after form submission (fallback)
            setTimeout(() => {
                container.classList.remove('loading');
            }, 5000);
        }

        // Copy to clipboard functionality
        document.addEventListener('DOMContentLoaded', function() {
            const shortUrls = document.querySelectorAll('.short-url, .table-link');
            
            shortUrls.forEach(link => {
                link.addEventListener('click', function(e) {
                    if (e.ctrlKey || e.metaKey) {
                        e.preventDefault();
                        navigator.clipboard.writeText(this.href).then(() => {
                            // Show a brief feedback
                            const originalText = this.textContent;
                            this.textContent = 'Copied!';
                            setTimeout(() => {
                                this.textContent = originalText;
                            }, 1000);
                        });
                    }
                });
            });
        });

        // Add smooth scrolling to table when new URL is added
        if (document.querySelector('.new-entry')) {
            setTimeout(() => {
                document.querySelector('.table-section').scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }, 500);
        }
    </script>
</body>
</html>